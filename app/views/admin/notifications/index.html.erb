<h1>All notifications</h1>

<div class="toolbar toolbar-top">
  <%= link_to 'Back', admin_path, {:class => "lnk-back"} %>
  <%= link_to 'New Notification', new_admin_notification_path, {:class => "btn"} %>  
</div>

<ul class="admin-list-notifications">
  <% @notifications.each do |notification| %>
    
    <li>
      <b>Title:</b> <%= notification.title %><br />
      <b>Content:</b> <%= notification.content %><br /><br />
      <p>
        <a href="#" class="btn btn-notification" data-url="<%= request.protocol %><%= request.host %>:<%= request.port %>/notifications/<%= notification.id%>" data-title="<%= notification.title %>" data-content="<%= notification.content %>">Send notification</a>
    </p>
      <div class="actions">
        <%= link_to 'Show', admin_notification_path(notification) %>
        <%= link_to 'Edit', edit_admin_notification_path(notification) %>
        <%= link_to 'Destroy', admin_notification_path(notification), confirm: 'Are you sure?', method: :delete %>  
      </div>
    </li>
    
  <% end %>  
</ul>

<div class="toolbar toolbar-bottom">
  <%= link_to 'Back', admin_path, {:class => "lnk-back"} %>
  <%= link_to 'New Notification', new_admin_notification_path, {:class => "btn"} %>  
</div>