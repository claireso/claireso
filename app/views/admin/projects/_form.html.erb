<% @project.tags.build %>
<%= form_for([:admin, @project]) do |project_form| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= project_form.label :title %><br />
    <%= project_form.text_field :title %>
  </div>
  <div class="field">
    <%= project_form.label :description %><br />
    <%= project_form.text_area :description %>
  </div>
  <div class="field">
    <%= project_form.label :url %><br />
    <%= project_form.text_field :url %>
  </div>
  <div class="field">
    <%= project_form.label :urlgithub %><br />
    <%= project_form.text_field :urlgithub %>
  </div>
  <h2>Tags</h2>
  <%= render :partial => 'admin/tags/form',
             :locals => {:form => project_form} %>
  <div class="actions">
    <%= project_form.submit %>
  </div>
<% end %>
